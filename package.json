{
  "name": "zanahorario",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm-run-all --parallel client-start kiwi-dev",
    "start": "echo \"Error: not specified\" && exit 1",
    "client-start": "cd client && npm start",
    "kiwi-dev": "cd server && npm-run-all --parallel build-watch dev",
    "eslint": "cd client && npm run eslint",
    "tslint": "cd server && npm run tslint",
    "build-client": "cd client && npm run build",
    "build-server": "cd server && npm run compile",
    "build": "npm-run-all build-client build-server",
    "install-client": "cd client && npm install",
    "install-server": "cd server && npm install",
    "postinstall": "npm-run-all install-client install-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cavepotcode/zanahorario.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cavepotcode/zanahorario/issues"
  },
  "homepage": "https://github.com/cavepotcode/zanahorario#readme",
  "devDependencies": {
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "npm run eslint",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "npm run tslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
